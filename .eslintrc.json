{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "camelcase": "off",
    "prettier/prettier": ["error", {
      "printWidth": 80,
      "tabWidth": 2,
      "endOfLine": "auto",
      "singleQuote": true,
      "trailingComma": "all",
      "arrowParens": "always",
      // "arrowParens": "avoid",
      "semi": true // PARA COLOCAR O ; NO FINAL, EM INGLÃŠS semicolon
    }],
    "simple-import-sort/imports": "error"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}